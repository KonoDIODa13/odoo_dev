<odoo>
    <data>
     <!-- Vista Tree -->
        <record model="ir.ui.view" id="vista_filmotecajaime_tecnica_tree">
            <field name="name">vista_filmotecajaime_tecnica_tree</field>
            <field name="model">filmotecajaime.tecnica</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="peliculas_id"/>
                </tree>
            </field>
        </record>
        <!-- Vista Form -->
        <record id="vista_filmotecajaime_tecnica_form" model="ir.ui.view">
            <field name="name">vista_filmotecajaime_tecnica_form</field>
            <field name="model">filmotecajaime.tecnica</field>
            <field name="arch" type="xml">
                <form string="formulario_tecnica">
                    <sheet>
                        <group name="group_top">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="peliculas_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>